<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Ordenes</title>
</head>
<body>
	<h1 class="m-4">Consulta de ordenes</h1>
	<form>
		<label class="m-4" for="id">Ingrese el ID de orden:</label>
		<input type="text" id="id" name="id">
		<button class="btn btn-primary" type="button" onclick="buscarRegistro()">Buscar</button>
	</form>
	<div class="m-4" id="resultado"></div>

	<script>

		function buscarRegistro() {
			const id = document.getElementById("id").value;
			fetch(`http://localhost:8080/api/${id}`)
				.then(response => response.json())
				.then((data) => {
          if(!isNaN){
            resultado.innerHTML = "El ID de orden debe ser un nÃºmero"
          } else {
            const resultado = document.getElementById("resultado");
					resultado.innerHTML = `ID: ${JSON.stringify(data)}`;
          }
				})
				.catch(error => console.error(error));
		}
	</script>
</body>
</html>